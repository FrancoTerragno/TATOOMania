Algoritmo TATOOMania
	// Turnos Tatto Mania
	Dimension turnos[20] //Turnos ocupados en la semana
	Dimension dias[7] 
	Dimension horas[2] 
	Definir diaElegido, horaElegida como cadena
	Definir opcionMenu, cantTurno como Entero
	
	// Consultas/Presupuestos
	Dimension productos[10]
	Definir cantidadProductos como Entero
	
	
	Repetir
		escribir "Bienvenidx a TATTO MANIA :), ¿Que te gustaría hacer?"
		escribir "1. Quiero mi turno para Tatoo"
		escribir "2. Consultas/ Pedido de Presupuestos"
		escribir "3.Salir"
		Leer menuPrincipal
		
		// reserva  de turnos
		Si menuPrincipal=1 Entonces
			
			dias[1] <- "Lunes "
			dias[2] <- "Martes "
			dias[3] <- "Miércoles "
			dias[4] <- "Jueves "
			dias[5] <- "Viernes "
			dias[6] <- "Sábado "
			dias[7] <- "Domingo "
			
			horas[1] <- "08:00 AM - 11:00 PM"
			horas[2] <- "13:00 PM - 16:00 PM"
			
			cantTurno<-1 //cantidad de turnos Reservados
			
			
			Repetir
				Mostrar "Selecciona el día para tu turno:"
				Para i <- 1 Hasta 7
					Mostrar i, ". ", dias[i]
				Fin Para
				Leer diaElegido
				
				Mostrar "Selecciona la hora para tu turno:"
				Para i <- 1 Hasta 2
					Mostrar i, ". ", horas[i]
				Fin Para
				Leer horaElegida
				
				turnoElegido<-concatenar(diaElegido,horaElegida) 
				Si cantTurno=1 entonces 		
					turnos[cantTurno]<-turnoElegido	
					Mostrar "Tu Turno Fué reservado Exitosamente.¡Te esperamos!."
				Sino
					Existe<- Falso 
					Para i<-1 Hasta cantTurno Hacer
						Si turnos[i]=turnoelegido Entonces 
							Existe<-Verdadero
						FinSi
					FinPara
					Si Existe entonces
						Mostrar "El turno que elegiste se encuentra ocupado. Por favor seleccioná otro, Gracias!."
					SiNo
						turnos[cantTurno]<-turnoElegido	
						Mostrar "Tu Turno Fué reservado Exitosamente.¡Te esperamos!."
					FinSi
				FinSi
				cantTurno<-cantTurno+1
				Mostrar "¿Queres reservar otro turno? (1: Sí / 0: No)"
				Leer opcionMenu
			Hasta que opcionMenu = 0	
			Mostrar "Lista de turnos ingresados:"
			Para i <- 1 Hasta cantTurno-1 
				xdias<-subcadena(turnos[i],1,1)
				xhoras<-subcadena(turnos[i],2,2)
				Mostrar dias[xdias]," ",horas[xhoras]
			Fin Para		
		FinSi		
		
		Si menuPrincipal=2 Entonces
			cantidadProductos <- 1
			
			Repetir
				Mostrar "Dejanos tu consulta y datos de contacto."
				Leer productos[cantidadProductos]
				
				
				cantidadProductos <- cantidadProductos + 1
				
				Mostrar "¿Queres dejar otra consulta? (1: Sí / 0: No)"
				Leer opcionMenu
			Hasta que opcionMenu = 0
			
			Mostrar "Consultas/Presupuesto:"
			Para i <- 1 Hasta cantidadProductos
				Mostrar productos[i]
			Fin Para		
		FinSi			
	Hasta Que menuPrincipal=3
FinAlgoritmo
